#!/bin/bash
#SBATCH --job-name=simpixAB
#SBATCH --time=4:00:00
#SBATCH -A phys56xx
#SBATCH --partition=standard
#SBATCH --nodes=1
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=1
#SBATCH --mem=16G
#SBATCH --output=simpixAB_%j.log

# Setup environment (same as interactive)
source ~/.bashrc
conda activate phys56xx

# Go to submit directory
cd $SLURM_SUBMIT_DIR

# ---- Inputs ----
SRC="imageA.png"
TGT="imageB.png"
TRIALS= 20000000

# ---- Run Simpix A -> B ----
./simpix "$SRC" "$TGT" out_AB.png collageAB.png "$TRIALS"

echo "Done: imageA.png -> imageB.png"

